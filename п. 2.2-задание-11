var n := 10;
var a,b: array [1..10] of integer;
var maxx := 0.0;
var treug := 0;
var S :array [1..10] of real;
for var i:=1 to n do begin
  a[i]:=Random(1,10);
  b[i]:=Random(1,10);
  S[i] := 1/2*a[i]*b[i];
  writeln ('a[', i, '] = ', a[i]:4, ' b[' , i, '] = ', b[i]:4, ' s[', i, '] = ', s[i]:6:2);
  end;
