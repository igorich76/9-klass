//не совсем эффективное решение, но показывает ход мыслей
//и видно что делает каждый кусок программы
program pr7;
var  a: array[1..7] of real;
     b: real;
begin
  b := 0;
  Println('Введите  температруру: ');
  for var i := 1 to 1 do   
  begin
    Println('Понедельник>>'); 
    Readln(a[1]);  
    b += a[1];
  end;
  for var i := 2 to 2 do   
  begin
    Println('Вторник>>'); 
    Readln(a[2]); 
    b += a[2]
  end;
  for var i := 3 to 3 do   
  begin
    Println('Среда>>'); 
    Readln(a[3]); 
    b += a[3]
  end;
  for var i := 4 to 4 do   
  begin
    Println('Четверг>>'); 
    Readln(a[4]);
    b += a[4]
  end;
  for var i := 5 to 5 do   
  begin
    Println('Пятница>>'); 
    Readln(a[5]);
    b += a[5]
  end;
  for var i := 6 to 6 do   
  begin
    Println('Суббота>>'); 
    Readln(a[6]); 
    b += a[6]
  end;
  for var i := 7 to 7 do   
  begin
    Println('Воскресенье>>'); 
    Readln(a[7]);  
    b += a[7]
  end;
  Println(a); //для контроля
  Println(b); //тоже для контроля
  Write('Средняя температура за неделю:', b / 7:6:2);
    
end.
